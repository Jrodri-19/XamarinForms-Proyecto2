<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AplicacionDBP1.miApp.CVDisplayPage"
             Title="CV Display Page">

    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="20">
            <Label Text="Curriculum Vitae" FontSize="Large" TextColor="Black" HorizontalOptions="Center" />
            <Label x:Name="cvContentLabel" TextColor="Black" />
            <Button Text="Exportar CV" Clicked="OnExportClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
